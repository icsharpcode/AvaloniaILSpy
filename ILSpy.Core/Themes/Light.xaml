<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
    
    <Style>
        <Style.Resources>
            
            <Color x:Key="WindowColorKey">#FFFFFF</Color>
            <Color x:Key="WindowTextColorKey">#1E1E1E</Color>

            <SolidColorBrush x:Key="ThemeCodeBackgroundBrush" Color="{DynamicResource WindowColorKey}"></SolidColorBrush>
            <SolidColorBrush x:Key="ThemeCodeForegroundBrush" Color="{DynamicResource WindowTextColorKey}"></SolidColorBrush>
            
            <sys:String x:Key="CSharp-Mode">CSharp-Mode.xshd</sys:String>
            <sys:String x:Key="ILAsm-Mode">ILAsm-Mode.xshd</sys:String>
            
        </Style.Resources>
    </Style>
    
</Styles>