<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml"/>

    <Style>
        <Style.Resources>

			<Color x:Key="HighlightColorKey">#3399FF</Color>
			<Color x:Key="HighlightTextColorKey">#FFFFFF</Color>
            <Color x:Key="WindowColorKey">#333337</Color>
            <Color x:Key="WindowTextColorKey">#F1F1F1</Color>

            <SolidColorBrush x:Key="ThemeCodeBackgroundBrush" Color="{DynamicResource WindowColorKey}"></SolidColorBrush>
            <SolidColorBrush x:Key="ThemeCodeForegroundBrush" Color="{DynamicResource WindowTextColorKey}"></SolidColorBrush>
            
            <sys:String x:Key="CSharp-Mode">CSharp-Mode-Dark.xshd</sys:String>
            <sys:String x:Key="ILAsm-Mode">ILAsm-Mode-Dark.xshd</sys:String>
        
        </Style.Resources>
    </Style>
    
</Styles>