    <Style Selector="local|SharpTreeViewItem[IsSelected=true] /template/ local|SharpTreeNodeView#nodeView" > 
	    <Setter
	            Property="TextBackground"
	            Value="{DynamicResource ThemeAccentBrush4}" />
	    <Setter
